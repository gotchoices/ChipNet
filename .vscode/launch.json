{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Jest Debug",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceRoot}/node_modules/jest/bin/jest.js",
				"--runInBand",
				"--watchAll=false",
				"--no-cache"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"outFiles": [
				"${workspaceRoot}/dist/**/*"
			],
			"sourceMaps": true,
			"smartStep": true,
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "test"
			}
		},
		{
			"name": "ChipNet Tests Debug",
			"type": "node",
			"request": "launch",
			"args": [
				"test",
				"--",
				"--runInBand",
				"--watchAll=false",
				"--testNamePattern",
				"${jest.testNamePattern}",
				"--runTestsByPath",
				"${jest.testFile}"
			],
			"sourceMaps": true,
			"smartStep": true,
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"runtimeExecutable": "npm"
		}
	]
}
